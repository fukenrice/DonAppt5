<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="colorPrimary">@color/colorFab</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">200dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="AppTheme.PopUpWindowStyle" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">43%</item>
    </style>

</resources>
